<idea-plugin>
    <id>com.github.mutl3y.ansiblehelper</id>
    <name>AnsibleHelper</name>
    <vendor>mutl3y</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.mutl3y.ansiblehelper.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.mutl3y.ansiblehelper.services.MyProjectService"/>
        <defaultLiveTemplates file="/liveTemplates/ansible_2_10_idea_live_template.xml"/>
        <defaultLiveTemplates file="/liveTemplates/ansible_2_9_idea_live_template.xml"/>
        <liveTemplateContext implementation="com.github.mutl3y.ansiblehelper.AnsibleContext"/>
        <liveTemplateMacro implementation="com.github.mutl3y.ansiblehelper.TitleCaseMacro"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.mutl3y.ansiblehelper.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
